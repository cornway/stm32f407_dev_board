#ifndef MUTEX_H
#define MUTEX_H

#include "machM4.h"
#include "thread.h"
#include "iterable.h"


#define MAX_OWNERS_COUNT    (8U)
#define MAX_MUTEX_COUNT     (8U)

enum {
    MUTEX_GRANT_LOCK,
    MUTEX_GRANT_WAIT,
    MUTEX_GRANT_UNLOCK,
    MUTEX_SMALL_CORE,
};



class MUTEX_FACTORY;


class MUTEX;

class OWNER {
    private :
        THREAD *owner;
        bool busy;
        
        friend class MUTEX_FACTORY;
    public :
        OWNER (THREAD *owner);
        OWNER (OWNER &owner);
    
        void init (THREAD *owner);
        
        THREAD *getOwner (); 
        void operator = (OWNER &owner);
        void operator = (OWNER *owner);
    
        ~OWNER ();
};

class MUTEX {
    private :
        vector::Vector<OWNER> owners;
        OWNER owner;
        WORD_T Id;
        bool busy;
    
        friend class MUTEX_FACTORY;
    public :
        MUTEX ();
        ~MUTEX ();
    
        void init (WORD_T id);
        WORD_T lock (OWNER &owner);
        OWNER *unlock (OWNER &owner);
    
        WORD_T getId ();
        bool hasLock ();
};


class MUTEX_FACTORY {
    private :
        MUTEX mutexMemory[MAX_MUTEX_COUNT];
        OWNER ownerMemory[MAX_OWNERS_COUNT];
    
        vector::Vector<MUTEX> mutexList;
    
        OWNER *allocOwner();
        void freeOwner (OWNER *owner);
    
        MUTEX *allocMutex ();
        void freeMutex (MUTEX *mutex);
    public :
        MUTEX_FACTORY ();
        ~MUTEX_FACTORY();
    
        void init ();
        WORD_T lock (THREAD *t, WORD_T id);
        THREAD *unlock (THREAD *t, WORD_T id);
        WORD_T monitor_start (WORD_T mon_id, WORD_T *mutexList);
        WORD_T monitor_stop (WORD_T mon_id, WORD_T *mutexList);
        
};

#endif /*MUTEX_H*/